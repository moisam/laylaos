diff -rub ./man-db-2.13.0/configure ./man-db-2.13.0/configure
--- ./man-db-2.13.0/configure	2024-11-03 02:32:04.573577529 +0000
+++ ./man-db-2.13.0/configure	2024-11-01 13:58:37.222956665 +0000
@@ -12046,7 +12046,7 @@
   lt_cv_deplibs_check_method=pass_all
   ;;
 
-beos*)
+beos*|laylaos*)
   lt_cv_deplibs_check_method=pass_all
   ;;
 
@@ -17676,6 +17676,19 @@
   hardcode_into_libs=yes
   ;;
 
+# LaylaOS
+laylaos*)
+  version_type=linux # correct to gnu/linux during the next big refactor
+  need_lib_prefix=no
+  need_version=no
+  library_names_spec='$libname$release$shared_ext$versuffix $libname$release$shared_ext$major $libname$shared_ext'
+  soname_spec='$libname$release$shared_ext$major'
+  shlibpath_var=LD_LIBRARY_PATH
+  shlibpath_overrides_runpath=no
+  dynamic_linker='LaylaOS ld.so'
+  hardcode_into_libs=yes
+  ;;
+
 # No shared lib support for Linux oldld, aout, or coff.
 linux*oldld* | linux*aout* | linux*coff*)
   dynamic_linker=no
